<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header"><i class="fa fa-table"></i> Item</h3>
  </div>
</div>


<body>
@foreach (var item in Model)
{
    <div class="row">
          <div class="col-lg-12">
            <section class="panel">
              <header class="panel-heading">
                Item Table
              </header>

              <table class="table table-striped table-advance table-hover">
                <tbody>
                  <tr>
                    <th><i class="icon_profile"></i> Item Name</th>
                    <th><i class="icon_profile"></i> Description</th>
                    <th><i class="icon_calendar"></i> Expiry Date</th>
                    <th><i class="icon_profile"></i> Category</th>
                    <th><i class="icon_calendar"></i> Date Created</th>
                    <th><i class="icon_cogs"></i> Action</th>
                  </tr>
                  <tr>
                    <td>@item.ItemName</td>
                    <td>@item.Description</td>
                    <td>@item.ExpiryDate</td>
                    <td>@item.Categories</td>
                    <td>@item.DateCreated</td>
                    <td>
                      <div class="btn-group">
                        <a class="btn btn-primary" asp-action="EditItem" asp-route-id="@item.Id"><i class="icon_plus_alt2"></i></a>
                        <a class="btn btn-success" asp-action="GetItem" asp-route-id="@item.Id"><i class="icon_check_alt2"></i></a>
                        <a class="btn btn-danger" asp-action="DeleteItem" asp-route-id="@item.Id"><i class="icon_close_alt2"></i></a>
                      </div>
                    </td>
                  </tr>
                
                </tbody>
              </table>
            </section>
          </div>
        </div>
}

 <!-- container section end -->
  <!-- javascripts -->
  <script src="assets1/js/jquery.js"></script>
  <script src="assets1/js/bootstrap.min.js"></script>
  <!-- nicescroll -->
  <script src="assets1/js/jquery.scrollTo.min.js"></script>
  <script src="assets1/js/jquery.nicescroll.js" type="text/javascript"></script>
  <!--custome script for all page-->
<script src="assets1/js/scripts.js"></script>

</body>

</html>
<button style="background-color: midnightblue"><a asp-controller="Item"  asp-action="AddItem">Create Item</a> </button>

