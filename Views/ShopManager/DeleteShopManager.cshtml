@model InventoryManagemenSystem_Ims.Entities.ShopManager

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}


<h3>Are you sure you want to delete this user?</h3>
<div style="font-size: 130%;">
    <hr />
    <dl class="row">
        
        <dt class="col-sm-2">
            Id:
        </dt>
        
        <dd class="col-sm-10">
            @Model.Id
        </dd>

        <dt class="col-sm-2">
            FirstName:
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            LastName:
        </dt>

        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class="col-sm-2">
            Email:
        </dt>

        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            PhoneNumber:
        </dt>

        <dd class="col-sm-10">
            @Model.PhoneNumber
        </dd>

        <dt class="col-sm-2">
            Address:
        </dt>

        <dd class="col-sm-10">
            @Model.Address
        </dd>
        
        
        
    </dl>

<form asp-action="Delete">
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index">Back to Dashboard</a>
</form>
</div>