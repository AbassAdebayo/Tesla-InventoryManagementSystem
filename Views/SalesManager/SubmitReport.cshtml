@model InventoryManagemenSystem_Ims.DTOs.CreateStockKeeperReportModel

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "Report Page";
}



<title>Report Page...</title>
<div class="bg-light">
    <h1 class="tagcolor" style="color:mediumblue">MAKE A REPORT</h1>
    <p class="tagcolor" style="color:mediumblue">Note: Business reporting is not dealing objects, it's dealing with relationship between objects. 
        <br>Showing negligence, is an act of irresponsibility.</p>
    <hr class="tagcolor" style="color:mediumblue">

</div>

<form asp-controller="SalesManager" asp-action="SubmitReport">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col-sm-6">
            <label asp-for="Subject" class="control-label"></label>
            <input asp-for="Subject" class="form-control" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-6">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        
        <div class="form-group col-sm-6">
            <label asp-for="StockKeeperReport" class="control-label"></label>
            <input asp-for="StockKeeperReport" class="form-control" />
            <span asp-validation-for="StockKeeperReport" class="text-danger"></span>
        </div>
        
    </div>
    <div class="form-group ">
        <input href="#myModal" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-12"
               data-toggle="modal" />
    </div>
</form>