<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header"><i class="fa fa-table"></i> Customer</h3>
  </div>
</div>


<body>
@foreach (var customer in Model)
{
    <div class="row">
          <div class="col-lg-12">
            <section class="panel">
              <header class="panel-heading">
                Customer Table
              </header>

              <table class="table table-striped table-advance table-hover">
                <tbody>
                  <tr>
                    <th><i class="icon_profile"></i> First Name</th>
                    <th><i class="icon_profile"></i> Last Name</th>
                    <th><i class="icon_profile"></i> CompanyName</th>
                    <th><i class="icon_mail_alt"></i> Email</th>
                    <th><i class="icon_pin_alt"></i> Address</th>
                    <th><i class="icon_mobile"></i> Mobile</th>
                    <th><i class="icon_calendar"></i> Date Created</th>
                    <th><i class="icon_cogs"></i> Action</th>
                  </tr>
                  <tr>
                    <td>@customer.FirstName</td>
                    <td>@customer.LastName</td>
                    <td>@customer.CompanyName</td>
                    <td>@customer.Email</td>
                    <td>@customer.Address</td>
                    <td>@customer.PhoneNumber</td>
                    <td>@customer.DateCreated</td>
                    <td>
                      <div class="btn-group">
                        <a class="btn btn-primary" asp-action="UpdateCustomer" asp-route-id="@customer.Id"><i class="icon_plus_alt2"></i></a>
                        <a class="btn btn-success" asp-action="GetCustomer" asp-route-id="@customer.Id"><i class="icon_check_alt2"></i></a>
                        <a class="btn btn-danger" asp-action="DeleteCustomer" asp-route-id="@customer.Id"><i class="icon_close_alt2"></i></a>
                      </div>
                    </td>
                  </tr>
                
                </tbody>
              </table>
            </section>
          </div>
        </div>
}

 <!-- container section end -->
  <!-- javascripts -->
  <script src="assets1/js/jquery.js"></script>
  <script src="assets1/js/bootstrap.min.js"></script>
  <!-- nicescroll -->
  <script src="assets1/js/jquery.scrollTo.min.js"></script>
  <script src="assets1/js/jquery.nicescroll.js" type="text/javascript"></script>
  <!--custome script for all page-->
<script src="assets1/js/scripts.js"></script>

</body>

</html>
