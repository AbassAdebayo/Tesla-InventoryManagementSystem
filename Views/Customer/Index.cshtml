@model IEnumerable<InventoryManagemenSystem_Ims.DTOs.CustomerDto>

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "Customer";
}

<div class="card-header" style="background-color:midnightblue;">
    <div class="card-title">
        <h1 class="text-center">Category</h1>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            
            
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            


            <th>
                Update
            </th>
            <th>
                Details
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => customer.Id)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => customer.FirstName)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => customer.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => customer.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => customer.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => customer.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => customer.PhoneNumber)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => customer.DateCreated)
            </td>
            
            <td>
                <a asp-action="UpdateCustomer" asp-route-id="@customer.Id">Update</a>
            </td>
            <td>
                <a asp-action="GetCustomer" asp-route-id="@customer.Id">Details</a>
            </td>
            <td>
                <a asp-action="DeleteCustomer" asp-route-id="@customer.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<button style="background-color: midnightblue"><a asp-controller="Customer"  asp-action="RegisterCustomer">Register Customer</a> </button>

<button style="background-color: midnightblue"><a asp-controller="User"  asp-action="Index">Return to your Dashboard</a> </button>
