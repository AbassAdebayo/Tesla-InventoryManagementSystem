@model InventoryManagemenSystem_Ims.DTOs.StockDto
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    //ViewData["Title"] = "Customer";
}

<h3>Are you sure you want to delete this Item?</h3>
<div style="font-size: 130%;">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name:
        </dt>
        <dd class="col-sm-10">
            @Model.StockName
        </dd>
        <dt class="col-sm-2">
            Description:
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Supplier:
        </dt>
        
        <dd class="col-sm-10">
            @Model.SupplierId
        </dd>
        <dt class="col-sm-2">
            Date Of Creation:
        </dt>
        
        <dd class="col-sm-10">
            @Model.DateCreated
        </dd>
        
        
    </dl>

<form asp-action="DeleteStock">
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index">Back to List</a>
</form>
</div>