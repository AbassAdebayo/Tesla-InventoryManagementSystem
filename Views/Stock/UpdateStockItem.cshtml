@model InventoryManagemenSystem_Ims.DTOs.UpdateStockItemRequestModel

<div class="container" xmlns="http://www.w3.org/1999/html">
    <div class="row justify-content-center">
        <div class=" card col-md-6">
            <div class="card-body ">
                <div class="bg-light">
                    <h1 class="tagcolor" style="color:mediumblue">Edit</h1>
                    <p class="tagcolor" style="color:mediumblue">Please use this box to Edit StockItem.</p>
                    <hr class="tagcolor" style="color:mediumblue">

                </div>
                <form asp-action="UpdateStockItem" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="col-md-6" style="margin-top: 20px; font-size: larger; font-weight: bold; color: darkcyan">
                        <label class="control-label">Items</label>
                        <select asp-for="ItemId" class="form-control" asp-items="ViewBag.Items" multiple required>
                            <option value="">--Select Item--</option>
                        </select>
                    </div>
                        
                    <div class="col-md-6" style="margin-top: 20px; font-size: larger; font-weight: bold; color: darkcyan">
                        <label class="control-label">Stocks</label>
                        <select asp-for="StockId" class="form-control" asp-items="ViewBag.Stocks" multiple required>
                            <option value="">--Select Stock--</option>
                        </select>
                    </div>
                        
                    <div class="form-group col-sm-6">
                        <label asp-for="Quantity" class="control-label"></label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                        
                    div class="form-group col-sm-6">
                    <label asp-for="PricePerUnit" class="control-label"></label>
                    <input asp-for="PricePerUnit" class="form-control" />
                    <span asp-validation-for="PricePerUnit" class="text-danger"></span>
                    </div>
                
                        
                        <div class="form-group col-sm-6">
                            <label asp-for="DateModified" class="control-label"></label>
                            <input asp-for="DateModified" class="form-control" />
                            <span asp-validation-for="DateModified" class="text-danger"></span>
                        </div></form>


            </div>

                    <div class="form-group ">
                        <input href="#myModal" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                        
                        
                    </div>
            
                
            </div>

        </div>




        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }</div>
    